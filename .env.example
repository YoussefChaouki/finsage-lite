# ==============================================================================
# FinSage-Lite Environment Configuration
# Copy this file to .env and fill in your values
# ==============================================================================

# Project
PROJECT_NAME="FinSage-Lite"

# Database (PostgreSQL with pgvector)
POSTGRES_USER=finsage
POSTGRES_PASSWORD=finsage_password
POSTGRES_DB=finsage_db
POSTGRES_HOST=localhost
POSTGRES_PORT=5432

# Ollama LLM (optional, for HyDE and generation)
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=mistral

# SEC EDGAR API
EDGAR_USER_AGENT=FinSage-Lite (your-email@example.com)

# Embedding Model
EMBEDDING_MODEL=all-MiniLM-L6-v2
EMBEDDING_DIMENSION=384

# Chunking
CHUNK_SIZE=250
CHUNK_OVERLAP=50

# Search
BM25_K1=1.5
BM25_B=0.75
RRF_K=60
DEFAULT_TOP_K=5

# Logging
LOG_LEVEL=INFO
